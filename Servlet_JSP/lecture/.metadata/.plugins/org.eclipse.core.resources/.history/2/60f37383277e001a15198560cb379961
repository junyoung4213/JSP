	<h2>EL - 값 꺼내기</h2>
	<%
		// java 객체를 공유공간에 저장하자
		/*
		applicationScope -> ServletContext
		SessionScope	 -> HttpSession
		requestScope	 -> ServletRequest
		pageScope		 -> JspContext
		
		1) EL 표현
		${member.no} or ${member["no"]}
		
		2) EL을 java로 변환
		Member member = (Member)pageContext.findAttribute("member");
		int value = member.getNo();
		
		3) EL이 공유공간을 탐색하는 순서
		
		JspContext -> ServletRequest -> HttpSession -> ServletContext -> null // 순서대로 찾아나감.
		*/

		// 테스트를 위한 데이터 객체를 공유공간에 저장하자
		pageContext.setAttribute("scores", new int[] { 90, 80, 70, 100 });

		List<String> nameList = new LinkedList<String>();
		nameList.add("홍길동");
		nameList.add("임꺽정");
		nameList.add("장길산");
		pageContext.setAttribute("nameList", nameList);

		Map<String, String> map = new HashMap<String, String>();
		map.put("s01", "홍길동");
		map.put("s02", "임꺽정");
		map.put("s03", "장길산");
		pageContext.setAttribute("map", map);
		
		pageContext.setAttribute("member",
				new Member()
				.setNo(100).setName("홍길동").setEmail("hong@test.com"));
	%>
	<p>
		<a href="el01.jsp">[이전]</a> <a href="el03.jsp">[다음]</a>
	</p>
</body>
